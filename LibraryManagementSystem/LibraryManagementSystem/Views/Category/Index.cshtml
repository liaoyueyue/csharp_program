@model IEnumerable<BookCategory>

@{
    ViewData["Title"] = "图书分类列表";
}

<h1>图书分类列表</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">添加新分类</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("编号")
            </th>
            <th>
                @Html.DisplayName("分类名")
            </th>
            <th>@Html.DisplayName("操作")</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">编辑</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
